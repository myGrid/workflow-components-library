= title "Sign Up"

= semantic_form_for resource,
                    :as => resource_name, 
                    :url => registration_path(resource_name), 
                    :html => { :class => "sign_up_main" } do |f|
  = devise_error_messages!
  = f.inputs do
    = f.input :email
    = f.input :password
    = f.input :password_confirmation, :required => true, :label => "Confirm Password"
    = f.buttons do
      = f.commit_button "Sign Up"
= render :partial => "devise/shared/links"