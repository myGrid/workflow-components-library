- if controller_name != 'sessions'
  = button "Sign in", new_session_path(resource_name), :size => :small
  %br/
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = button "Sign up", new_registration_path(resource_name), :size => :small
  %br/
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords'
  = button "Forgot your password?", new_password_path(resource_name), :size => :small
  %br/
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = button "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :size => :small
  %br/
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = button "Didn't receive unlock instructions?", new_unlock_path(resource_name), :size => :small
  %br/
  %br/
